---
layout: layouts/base.njk
---

{# Standard blog post layout with optional hero image #}

<article class="post post-standard">
    <div class="container">
        {# Post header #}
        <header class="post-header">
            <h1 class="post-title">{{ title }}</h1>
            
            <div class="post-meta">
                <time datetime="{{ date | htmlDateString }}">
                    {% if lang == 'es' %}
                        {{ date | readableDateES }}
                    {% else %}
                        {{ date | readableDate }}
                    {% endif %}
                </time>
                {% if authorName %}
                <div class="post-card-author">
                    <span class="author-name">{{ authorName }}</span>
                    {% if authorImage %}
                    <img src="{{ authorImage }}" alt="{{ authorName }}" class="author-avatar">
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </header>

        {# Hero image (optional) #}
        {% if image %}
        <figure class="post-hero">
            <img src="{{ image }}" alt="{{ imageAlt or title }}" loading="lazy">
            {% if imageCaption %}
                <figcaption>{{ imageCaption }}</figcaption>
            {% endif %}
        </figure>
        {% endif %}

        {# Post content #}
        <div class="post-content">
            {{ content | safe }}
        </div>

        {# Post footer - could include tags, share buttons, etc. #}
        <footer class="post-footer">
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                    <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </footer>
    </div>
</article>
