  {# ================================================================ #}
  {# BLOG POSTS - Dynamically Generated #}
  {# ================================================================ #}
  
  {# English Blog Posts #}
  {% for post in collections.postsEN %}
  <url>
    <loc>https://sgpyoga.co/blog/dist{{ post.url }}</loc>
    {# Find Spanish equivalent if exists #}
    {% set spanishPost = collections.postsES | findByFileSlug(post.fileSlug) %}
    <xhtml:link rel="alternate" hreflang="en" href="https://sgpyoga.co/blog/dist{{ post.url }}"/>
    {% if spanishPost %}
    <xhtml:link rel="alternate" hreflang="es" href="https://sgpyoga.co/blog/dist{{ spanishPost.url }}"/>
    {% endif %}
    <xhtml:link rel="alternate" hreflang="x-default" href="https://sgpyoga.co/blog/dist{{ post.url }}"/>
    <lastmod>{{ post.date | htmlDateString }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
  
  {# Spanish Blog Posts #}
  {% for post in collections.postsES %}
  <url>
    <loc>https://sgpyoga.co/blog/dist{{ post.url }}</loc>
    {# Find English equivalent if exists #}
    {% set englishPost = collections.postsEN | findByFileSlug(post.fileSlug) %}
    {% if englishPost %}
    <xhtml:link rel="alternate" hreflang="en" href="https://sgpyoga.co/blog/dist{{ englishPost.url }}"/>
    {% endif %}
    <xhtml:link rel="alternate" hreflang="es" href="https://sgpyoga.co/blog/dist{{ post.url }}"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="https://sgpyoga.co/blog/dist{{ englishPost.url if englishPost else post.url }}"/>
    <lastmod>{{ post.date | htmlDateString }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
  
