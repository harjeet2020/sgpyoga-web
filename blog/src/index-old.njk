---
layout: layouts/base.njk
title: "Blog"
description: "Read our latest insights on yoga practice, philosophy, and community"
image: "/assets/photos/inUse/social/og-blog.webp"
---

{# Additional CSS for featured posts #}
<link rel="stylesheet" href="/css/blog-featured.css">

<div class="blog-index">
    {# Featured Posts Slideshow Section #}
    {% include "components/featured-posts.njk" %}
    
    {# Main Blog Content #}
    <div class="container">
        {# Language selector or filter could go here #}
        
        <section class="posts-section">
            <h2 class="posts-section-title" data-i18n="blog:index.allPosts">All Posts</h2>
            
            {# Combined Filters and Search Bar Container #}
            <div class="filters-search-container">
                {# Category Filter Pills #}
                <div class="blog-filters">
                    <button class="filter-btn active" data-filter="all" data-i18n="blog:categories.all">All Posts</button>
                    <button class="filter-btn" data-filter="general" data-i18n="blog:categories.general">General</button>
                    <button class="filter-btn" data-filter="announcements" data-i18n="blog:categories.announcements">Announcements</button>
                    <button class="filter-btn" data-filter="spirituality" data-i18n="blog:categories.spirituality">Spirituality</button>
                </div>
                
                {# Search Box #}
                <div class="blog-search" role="search">
                    <label for="blogSearchInput" class="visually-hidden">Search blog posts</label>
                    <i data-lucide="search" class="search-icon"></i>
                    <input 
                        type="search" 
                        id="blogSearchInput" 
                        class="search-input"
                        placeholder="Search posts..."
                        data-i18n="[placeholder]blog:search.placeholder"
                        aria-label="Search blog posts"
                        autocomplete="off"
                    >
                    <button 
                        type="button" 
                        id="searchClearBtn" 
                        class="search-clear-btn" 
                        aria-label="Clear search"
                        data-i18n="[aria-label]blog:search.clear"
                        style="display: none;"
                    >
                        <i data-lucide="x"></i>
                    </button>
                </div>
            </div>
            
            {# Display all posts from both languages, sorted by date #}
            {# JavaScript will filter by current language and category #}
            <div class="posts-grid">
                {% for post in collections.allPosts %}
                <article class="post-card" data-lang="{{ post.data.lang }}" data-category="{{ post.data.category or 'general' }}">
                    <a href="{{ post.url | url }}" class="post-card-link">
                        {# Show image on card based on imageDisplay property #}
                        {% set displayMode = post.data.imageDisplay or 'both' %}
                        {% if post.data.image and (displayMode == 'blog-card' or displayMode == 'both') %}
                        <div class="post-card-image">
                            <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt or post.data.title }}" loading="lazy"
                                {% if post.data.imageCardPosition %}style="object-position: {{ post.data.imageCardPosition }};"{% endif %}>
                        </div>
                        {% endif %}
                        
                        <div class="post-card-content">
                            <div class="post-card-meta">
                                <time datetime="{{ post.date | htmlDateString }}">
                                    {% if post.data.lang == 'es' %}
                                        {{ post.date | readableDateES }}
                                    {% else %}
                                        {{ post.date | readableDate }}
                                    {% endif %}
                                </time>
                                {% if post.data.authorName %}
                                <div class="post-card-author">
                                    <span class="author-name">{{ post.data.authorName }}</span>
                                    {% if post.data.authorImage %}
                                    <img src="{{ post.data.authorImage }}" alt="{{ post.data.authorName }}" class="author-avatar">
                                    {% endif %}
                                </div>
                                {% endif %}
                            </div>
                            
                            <h3 class="post-card-title">{{ post.data.title }}</h3>
                            <p class="post-card-description">{{ post.data.description }}</p>
                            
                            {% if post.data.tags %}
                            <div class="post-card-tags">
                                {% for tag in post.data.tags | limit(3) %}
                                    <span class="tag">{{ tag }}</span>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </a>
                </article>
                {% endfor %}
            </div>
        </section>

        {# Separate sections by language (alternative view) #}
        {# Hidden by default - JavaScript will show if needed #}
        <section class="posts-by-language" style="display: none;">
            <div class="language-section" data-lang="en">
                <h2 data-i18n="blog:index.englishPosts">English Posts</h2>
                <ul class="post-list">
                    {% for post in collections.postsEN | limit(5) %}
                    <li>
                        <a href="{{ post.url | url }}">
                            <strong>{{ post.data.title }}</strong>
                            <span class="post-date">{{ post.date | readableDate }}</span>
                        </a>
                        <p>{{ post.data.description }}</p>
                    </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="language-section" data-lang="es">
                <h2 data-i18n="blog:index.spanishPosts">Publicaciones en Español</h2>
                <ul class="post-list">
                    {% for post in collections.postsES | limit(5) %}
                    <li>
                        <a href="{{ post.url | url }}">
                            <strong>{{ post.data.title }}</strong>
                            <span class="post-date">{{ post.date | readableDateES }}</span>
                        </a>
                        <p>{{ post.data.description }}</p>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
</div>

<script>
/**
 * Blog Index - Language, Category & Search Filtering
 * Filters posts based on language, category, and fuzzy search
 */

// Global state
let currentCategoryFilter = 'all';
let fuseInstance = null;
let searchResults = null;  // null = no search active, array = search results
let searchDebounceTimer = null;

// Load blog namespace and initialize search
// Wait for i18n to be ready
function initializeBlog() {
    if (typeof window.SGPi18n !== 'undefined' && window.SGPi18n.isInitialized) {
        console.log('Loading blog namespace...');
        window.SGPi18n.loadNamespacesOnDemand(['blog']).then(() => {
            console.log('Blog namespace loaded successfully');
            initializeSearch();
            initializeFilters();
            filterPosts();
        });
    } else {
        // Fallback if SGPi18n is not available yet
        console.log('Waiting for i18n initialization...');
        setTimeout(initializeBlog, 100);
    }
}

// Start initialization when DOM is ready
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeBlog);
} else {
    initializeBlog();
}

/**
 * Initialize search functionality
 * Fetches search index JSON and sets up Fuse.js
 */
async function initializeSearch() {
    try {
        // Fetch the search index JSON
        const response = await fetch('/blog/dist/search-index.json');
        if (!response.ok) {
            console.warn('Search index not found, search will be disabled');
            return;
        }
        
        const searchData = await response.json();
        console.log(`Search index loaded: ${searchData.length} posts`);
        
        // Create Fuse instance with weighted search
        fuseInstance = new Fuse(searchData, {
            keys: [
                { name: 'title', weight: 0.3 },
                { name: 'description', weight: 0.2 },
                { name: 'content', weight: 0.3 },
                { name: 'category', weight: 0.1 },
                { name: 'tags', weight: 0.1 }
            ],
            threshold: 0.4,
            ignoreLocation: true,
            minMatchCharLength: 2
        });
        
        // Set up search input listeners
        const searchInput = document.getElementById('blogSearchInput');
        const clearBtn = document.getElementById('searchClearBtn');
        
        if (searchInput) {
            // Search on input (debounced)
            searchInput.addEventListener('input', (e) => {
                handleSearchInput(e.target.value);
            });
            
            // Immediate search on Enter key
            searchInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    clearTimeout(searchDebounceTimer);
                    performSearch(e.target.value);
                }
                // Clear search on Escape key
                if (e.key === 'Escape') {
                    clearSearch();
                }
            });
        }
        
        if (clearBtn) {
            clearBtn.addEventListener('click', clearSearch);
        }
        
        console.log('Search initialized successfully');
    } catch (error) {
        console.error('Failed to initialize search:', error);
    }
}

/**
 * Handle search input with debouncing
 */
function handleSearchInput(query) {
    const clearBtn = document.getElementById('searchClearBtn');
    
    // Show/hide clear button
    if (clearBtn) {
        clearBtn.style.display = query.length > 0 ? 'block' : 'none';
    }
    
    // Clear previous timer
    clearTimeout(searchDebounceTimer);
    
    // Debounce search (300ms)
    searchDebounceTimer = setTimeout(() => {
        performSearch(query);
    }, 300);
}

/**
 * Perform the actual search
 */
function performSearch(query) {
    if (!fuseInstance) {
        console.warn('Search not initialized');
        return;
    }
    
    // Clear search if query is too short
    if (query.length < 2) {
        searchResults = null;
        filterPosts();
        return;
    }
    
    // Perform fuzzy search
    searchResults = fuseInstance.search(query);
    console.log(`Search for "${query}": ${searchResults.length} results`);
    
    // Re-filter posts with search results
    filterPosts();
}

/**
 * Clear search and reset to showing all posts
 */
function clearSearch() {
    const searchInput = document.getElementById('blogSearchInput');
    const clearBtn = document.getElementById('searchClearBtn');
    
    if (searchInput) {
        searchInput.value = '';
    }
    
    if (clearBtn) {
        clearBtn.style.display = 'none';
    }
    
    searchResults = null;
    filterPosts();
}

/**
 * Initialize category filter button event listeners
 */
function initializeFilters() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Update active button styling
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Update current filter and re-filter posts
            currentCategoryFilter = this.getAttribute('data-filter');
            console.log('Category filter changed to:', currentCategoryFilter);
            filterPosts();
        });
    });
}

/**
 * Main filtering function - filters by search, language AND category
 */
function filterPosts() {
    // Get current language from i18next (falls back to 'en' if not ready)
    const currentLang = (typeof i18next !== 'undefined' && i18next.language) ? i18next.language : 'en';
    
    const searchActive = searchResults !== null;
    console.log(`Filtering posts: search=${searchActive}, language=${currentLang}, category=${currentCategoryFilter}`);
    
    // Get all post cards
    const postCards = document.querySelectorAll('.post-card');
    const postsGrid = document.querySelector('.posts-grid');
    
    let visibleCount = 0;
    
    // Show/hide posts based on search, language AND category
    postCards.forEach(card => {
        const cardLang = card.getAttribute('data-lang');
        const cardCategory = card.getAttribute('data-category');
        const cardUrl = card.querySelector('a').getAttribute('href');
        
        // Check 1: Does it match search results (if search is active)?
        let matchesSearch = true;
        if (searchActive) {
            matchesSearch = searchResults.some(result => result.item.url === cardUrl);
        }
        
        // Check 2: Does it match language?
        const matchesLanguage = (cardLang === currentLang);
        
        // Check 3: Does it match category?
        const matchesCategory = (currentCategoryFilter === 'all' || cardCategory === currentCategoryFilter);
        
        // Post is visible if it matches ALL active filters
        if (matchesSearch && matchesLanguage && matchesCategory) {
            card.style.display = '';
            visibleCount++;
        } else {
            card.style.display = 'none';
        }
    });
    
    // Show message if no posts match current filters
    let noPostsMessage = document.querySelector('.no-posts-message');
    
    if (visibleCount === 0) {
        if (!noPostsMessage) {
            noPostsMessage = document.createElement('div');
            noPostsMessage.className = 'no-posts-message';
            noPostsMessage.style.cssText = 'grid-column: 1 / -1; text-align: center; padding: 3rem; color: var(--color-supplementary);';
            
            // Create appropriate message based on filters
            if (currentCategoryFilter === 'all') {
                // Only language filter is active
                if (currentLang === 'es') {
                    noPostsMessage.innerHTML = '<p>No hay publicaciones disponibles en español en este momento.</p><p><a href="#" onclick="switchLanguage(\'en\'); return false;" style="color: var(--color-accent-1);">Ver publicaciones en inglés</a></p>';
                } else {
                    noPostsMessage.innerHTML = '<p>No posts available in English at this time.</p><p><a href="#" onclick="switchLanguage(\'es\'); return false;" style="color: var(--color-accent-1);">Ver publicaciones en español</a></p>';
                }
            } else {
                // Both filters are active
                if (currentLang === 'es') {
                    noPostsMessage.innerHTML = '<p>No hay publicaciones en esta categoría.</p><p><a href="#" onclick="resetFilters(); return false;" style="color: var(--color-accent-1);">Ver todas las publicaciones</a></p>';
                } else {
                    noPostsMessage.innerHTML = '<p>No posts in this category.</p><p><a href="#" onclick="resetFilters(); return false;" style="color: var(--color-accent-1);">View all posts</a></p>';
                }
            }
            
            postsGrid.appendChild(noPostsMessage);
        }
    } else {
        if (noPostsMessage) {
            noPostsMessage.remove();
        }
    }
    
    console.log(`Showing ${visibleCount} posts (language: ${currentLang}, category: ${currentCategoryFilter})`);
}

/**
 * Reset all filters to default state
 */
function resetFilters() {
    // Reset category filter to 'all'
    currentCategoryFilter = 'all';
    
    // Update active button styling
    const filterButtons = document.querySelectorAll('.filter-btn');
    filterButtons.forEach(btn => {
        if (btn.getAttribute('data-filter') === 'all') {
            btn.classList.add('active');
        } else {
            btn.classList.remove('active');
        }
    });
    
    // Re-filter posts
    filterPosts();
}

/**
 * Helper function to switch language (works with navbar language selector)
 */
function switchLanguage(lang) {
    if (typeof i18next !== 'undefined') {
        i18next.changeLanguage(lang, () => {
            filterPosts();
        });
    }
}

// Initialize filtering when page loads
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
        // Wait a bit for i18next to initialize
        setTimeout(() => {
            initializeSearch();
            initializeFilters();
            filterPosts();
        }, 100);
    });
} else {
    // DOM already loaded
    setTimeout(() => {
        initializeSearch();
        initializeFilters();
        filterPosts();
    }, 100);
}

// Listen for language changes from navbar
if (typeof i18next !== 'undefined') {
    i18next.on('languageChanged', (lng) => {
        console.log('Language changed to:', lng);
        filterPosts();
    });
}

// Also filter when i18next finishes initializing
window.addEventListener('i18nextInitialized', () => {
    initializeSearch();
    initializeFilters();
    filterPosts();
});
</script>

{# JavaScript for featured posts slideshow #}
<script src="/js/blog-featured.js"></script>

{# Re-initialize Lucide icons for dynamically added elements #}
<script>
    // Re-initialize Lucide icons after slideshow loads
    if (typeof lucide !== 'undefined') {
        setTimeout(() => {
            lucide.createIcons();
        }, 100);
    }
</script>
